<p>Users show page</p>
<a href="/gardens/new">Create a new Garden</a>
<div>
  <h3><%= @user.name %></h3>
  <p><%= @user.email %></p>
  <p><%= @user.location %></p>
</div>

<div class="user-gardens">
  <h4><%= @user.name %>'s Gardens</h4>
  <% @user.gardens.each do |garden| %>
    <p><%= garden.name %></p>
  <% end %>
</div>
